{
  "plugins": ["node"],
  "extends": ["hapi"],
  "rules": {
    "indent": ["error", 2, { "MemberExpression": "off" }],
    "no-shadow": ["error", { "allow": ["server", "next", "err"] }],
    "hapi/hapi-capitalize-modules": 0,
    "hapi/hapi-scope-start": 0,
    "func-style": 0
  },
  "parserOptions": {
    "ecmaVersion": 2017
  }
}
